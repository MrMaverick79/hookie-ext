{
    "manifest_version": 2,
    "name": "Hookie",
    "version": "1.0",
  
    "description": "Adds a browser action icon to the toolbar. Click the button to grab the current url. The URL is then added to a Hookie list at 'https://hookiebookmarks.herokuapp.com/links/new'",
    "homepage_url": "https://hookiebookmarks.herokuapp.com",
    "icons": {
      "48": "icons/plus-48.png"
    },
  
    "permissions": [
      "tabs",
      "activeTab"
    ],
  
    "browser_action": {
      "default_icon": "icons/plus-48.png",
      "default_title": "Hookie",
      "default_popup": "popup/hookie.html"
  
      
    },
    

    "background": {
      "scripts": ["hookie.js"]
    }
    

   
   
  }
  